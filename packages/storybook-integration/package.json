{
  "name": "@ima/storybook-integration",
  "version": "20.0.0",
  "description": "Storybook integration addon for IMA.js applications.",
  "type": "module",
  "keywords": [
    "IMA.js",
    "storybook",
    "integration",
    "addon"
  ],
  "bugs": {
    "url": "https://github.com/seznam/ima/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seznam/ima.git",
    "directory": "packages/storybook-integration"
  },
  "license": "MIT",
  "author": "Jan Šimeček <jan.simecek@firma.seznam.cz>",
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w --preserveWatchOutput",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "test": "jest --config jest.config.cjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "import": "./dist/preset.js",
      "default": "./dist/preset.js"
    },
    "./preview": {
      "types": "./dist/preview.d.ts",
      "import": "./dist/preview.js",
      "default": "./dist/preview.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js",
      "default": "./dist/helpers/index.js"
    }
  },
  "devDependencies": {
    "@storybook/core-webpack": "^9.1.16",
    "@storybook/react": "^9.1.16",
    "@storybook/types": "^8.6.14",
    "@types/webpack": "^5.28.5"
  },
  "peerDependencies": {
    "@ima/cli": ">=20.0.0",
    "@ima/core": ">=20.0.0",
    "@ima/dev-utils": ">=20.0.0",
    "@ima/react-page-renderer": ">=20.0.0",
    "webpack": ">=5.x"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "ts-deepmerge": "^7.0.3"
  }
}
