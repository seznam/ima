{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "Node16",
    "moduleResolution": "nodenext",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "./build/ts-cache",
    "paths": {
      "app/*": [
        "app/*"
      ],
    }
  },
  "include": ["./app/**/*", "./build/tmp/types/**/*"],
  "exclude": ["./**/__tests__"]
}
