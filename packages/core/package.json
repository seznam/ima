		"enzyme": "2.7.1",
		"ima-helpers": "0.14.0-rc.1",
		"react": "15.4.2",
		"react-addons-test-utils": "15.4.2",
		"react-dom": "15.4.2",
		"superagent": "3.4.4"
	},
	"browserify": {
		"transform": [
			"babelify"
		]
