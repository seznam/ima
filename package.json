{
  "name": "ima",
  "description": "IMA.js framework for isomorphic javascript application",
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@fortawesome/fontawesome-free": "^5.11.2",
    "autocannon": "^4.2.0",
    "babel-eslint": "^10.0.3",
    "bulma": "^0.8.0",
    "commitizen": "^3.0.0",
    "del": "^5.1.0",
    "eslint": "^5.15.1",
    "eslint-config-last": "^0.0.5",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-jasmine": "^2.9.3",
    "eslint-plugin-jest": "^22.2.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "fs-extra": "^8.1.0",
    "git-cz": "^3.3.0",
    "gulp": "^4.0.2",
    "gulp-change": "^1.0.2",
    "gulp-rename": "^1.4.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jsdoc-to-markdown": "^5.0.2",
    "jsdom": "^15.2.1",
    "lerna": "^3.18.3",
    "lint-staged": "^8.1.5",
    "lunr": "^2.3.8",
    "map-stream": "0.0.7",
    "prettier": "^1.16.4",
    "to-mock": "^1.4.1",
    "verdaccio": "^4.3.4"
  },
  "scripts": {
    "benchmark": "utils/benchmark/benchmark.sh",
    "doc": "gulp doc",
    "test": "lerna run test",
    "release": "lerna version",
    "release:next": "npm run release -- prerelease",
    "release:next:init": "npm run release -- premajor --force-publish",
    "release:graduate": "npm run release -- --conventional-graduate",
    "release:publish": "lerna publish from-git --yes",
    "lint:cmd": "eslint -c ./.eslintrc.js --ignore-path ./.prettierignore",
    "lint": "npm run lint:cmd -- './**/*.{js,jsx}'",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "commit": "git-cz",
    "preversion": "node utils/version/create-ima-app-versions.js",
    "version": "npm run doc && node utils/version/create-ima-app-versions.js && git add docs packages/create-ima-app/template/package.json"
  },
  "author": "Miroslav Jancarik <miroslav.jancarik@firma.seznam.cz>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seznam/ima.git"
  },
  "bugs": {
    "url": "https://github.com/seznam/ima/issues"
  },
  "lint-staged": {
    "linters": {
      "**/*.{js,jsx}": [
        "npm run lint:cmd"
      ]
    },
    "ignore": [
      "/packages/*/(dist|coverage|docs|doc|node_modules)/**/*",
      "/(coverage|docs|doc|node_modules)/**/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "if [[ `git rev-parse --abbrev-ref HEAD` =~ ^(master|next)$ ]] ; then commitlint -E HUSKY_GIT_PARAMS ; fi"
    }
  }
}
